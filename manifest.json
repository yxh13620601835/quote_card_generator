{
  "manifest_version": 3,
  "name": "网页金句卡片生成器",
  "version": "1.0.0",
  "description": "将网页中的精彩文字内容转换成精美的图片卡片",
  "permissions": [
    "downloads",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "https://cdn.jsdelivr.net/*",
    "https://fonts.googleapis.com/*",
    "https://fonts.gstatic.com/*",
    "https://cdn.jsdelivr.net/npm/lxgw-wenkai-webfont/*",
    "https://cdnjs.cloudflare.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; connect-src 'self' http://localhost:*; script-src 'self'; style-src 'self' https://fonts.googleapis.com https://cdn.jsdelivr.net; font-src 'self' https://fonts.gstatic.com https://cdn.jsdelivr.net data:; img-src 'self' data:"
  },
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "css": []
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.svg",
      "32": "images/icon32.svg",
      "48": "images/icon48.svg",
      "128": "images/icon128.svg"
    }
  },
  "icons": {
    "16": "images/icon16.svg",
    "32": "images/icon32.svg",
    "48": "images/icon48.svg",
    "128": "images/icon128.svg"
  }
}